[Unit]
Description=Apache Web Server
After=data-container@%i.service
Requires=data-container@%i.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill web-server1
ExecStartPre=-/usr/bin/docker rm web-server1
ExecStartPre=/usr/bin/docker pull deanhuakau/virtualisation_assn_web_server
ExecStart=/usr/bin/docker run --rm --name web-server1 deanhuakau/virtualisation_assn1_web_server --volumes-from data-container1 -D FOREGROUND
ExecStop=/usr/bin/docker stop web-server1

[X-Fleet]
Conflicts=web-server@*.service
